<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Create a SlotSeed Account"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name*"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/name_text_layout"
                app:layout_constraintEnd_toStartOf="@+id/name_text_layout"
                app:layout_constraintTop_toTopOf="@+id/name_text_layout"
                app:srcCompat="@drawable/man" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/name_text_layout"
                app:layout_constraintStart_toStartOf="@+id/name_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/name_text_layout">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email(optional)"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/email_input_layout"
                app:layout_constraintEnd_toStartOf="@+id/email_input_layout"
                app:layout_constraintTop_toTopOf="@+id/email_input_layout"
                app:srcCompat="@drawable/mail" />


            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/refferral_input_layout"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--app:layout_constraintEnd_toEndOf="@+id/name_text_layout"-->
                <!--app:layout_constraintStart_toStartOf="@+id/name_text_layout"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/email_input_layout">-->

                <!--<EditText-->
                    <!--android:id="@+id/refferal_code"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="Refferal code"-->
                    <!--android:inputType="textEmailAddress" />-->
            <!--</android.support.design.widget.TextInputLayout>-->

            <!--<ImageView-->
                <!--android:id="@+id/imageView16"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:layout_marginEnd="8dp"-->
                <!--app:layout_constraintBottom_toBottomOf="@+id/refferral_input_layout"-->
                <!--app:layout_constraintEnd_toStartOf="@+id/email_input_layout"-->
                <!--app:layout_constraintTop_toTopOf="@+id/refferral_input_layout"-->
                <!--app:srcCompat="@drawable/referal" />-->

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/location"
                app:layout_constraintEnd_toStartOf="@+id/location"
                app:layout_constraintTop_toTopOf="@+id/location"
                app:layout_constraintVertical_bias="0.285"
                app:srcCompat="@drawable/placeholder" />


            <Button
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/primary_gradient_button"
                android:enabled="true"
                android:text="Create Accout"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/male" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="----------OR----------"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register" />

            <Button
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/primary_dark_ouline_radius"
                android:text="SignIn with an Existed Account"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/register"
                app:layout_constraintStart_toStartOf="@+id/register"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Choose a Location*"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="@+id/email_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/email_input_layout" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@+id/location"
                app:layout_constraintStart_toStartOf="@+id/location"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Gender*"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/location_icon"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/male"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/male"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/female"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/female"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/male"
                app:layout_constraintStart_toEndOf="@+id/male"
                app:layout_constraintTop_toTopOf="@+id/male"
                 />

            <android.support.v7.widget.CardView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/login"
                tools:layout_editor_absoluteX="8dp" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>